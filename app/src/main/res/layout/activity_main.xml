<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jwimsatt.eightball.MainActivity"
    android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_title"
        android:text="Magic 8 Ball"
        android:textSize="28dp"
        android:gravity="center" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/etxt_question"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/txt_question"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:inputType="text|textCapSentences|textAutoCorrect"
            android:background="@color/colorAccent"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_question"
            android:text="What's your question?"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_marginTop="44dp" />

        <Button
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/btn_answer"
            android:layout_below="@+id/etxt_question"
            android:background="@drawable/circle_button"
            android:gravity="center"
            android:text="8"
            android:textSize="90dp"
            android:fontFamily="monospace"
            android:textColor="#000000"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:onClick="buttonClick_answer"/>

    </RelativeLayout>


</LinearLayout>
